package ngs.view{	import com.greensock.TweenLite;	import com.greensock.easing.*;	import com.greensock.plugins.TweenPlugin;	import com.greensock.easing.CustomEase;		public class Splatter extends MovieClip	{		public var numInstances:Number;		public var exception:Number;		private var _target:Object;				public function Splatter() 		{					}				public function set target(t:Object):void		{			_target = t;			init();		}				public function get target():*		{			return _target;		}				public function init():void		{			CustomEase.create("bouncy", [{ s:0,cp:0.77,e:1.048},{s:1.048,cp:1.326,e:1.112},{s:1.112,cp:0.898,e:1 }]);			preTransitionState();		}				function preTransitionState():void		{			for (var i:int = 0; i < numInstances + 1; i++)			{				var curObj:String = target.getChildByName("instance" + i);				curObj.scaleX = curObj.scaleY = 0;			}		}				function transitionIn():void		{			preTransitionState();						if (exception != null)			{ 				TweenLite.to(getChildByName("instance" + exception), 0.5, { scaleX: 1, scaleY: 1, ease: CustomEase.byName("bouncy"), delay: 0.001 });			}						for (var i:int = 0; i < numInstances + 1; i++)			{				var curObj:String = target.getChildByName("instance" + i);				if (exception != i) TweenLite.to(curObj, 1, { scaleX: 1, scaleY: 1, ease: Expo.easeOut, delay: 0.2 });			}		}	}}