package ngs.view{  import flash.display.MovieClip;  import com.greensock.TimelineMax;  import com.greensock.TweenLite;  import com.greensock.easing.*;  import flash.events.EventDispatcher;  import flash.events.Event;    public class LoaderBlock extends MovieClip  {    public static const TRANSITION_DONE:String = "transitionDone";        public function LoaderBlock()    {          }        public function init():void    {      var delay = Math.random() * 3;      var ani:TimelineMax = new TimelineMax({ delay: delay, onComplete: terminate });      var speed:Number = 0.5 + (Math.random () * 0.7)  ;      var scale:Number = 0.3 + Math.random() * 1;      var randomAlpha:Number = Math.random() * 0.8;      var randomX:Number = (Math.random() * 80) - 40;      var randomY:Number = (Math.random() * 80) - 40;            var startX = (Math.random() * 80) - 40 ;      var startY = (Math.random() * 80) - 40 ;            ani.insert(TweenLite.to(this, 0, { x: startX, y: startY, alpha: 0, scaleX: 0, scaleY: 0 }));      ani.insertMultiple      ([        TweenLite.to(this, speed, { x: randomX, y: randomY, scaleX: scale, scaleY: scale }),        TweenLite.to(this, speed / 2, { alpha: randomAlpha }),        TweenLite.to(this, speed / 2, { alpha: 0, delay: speed / 2 })      ]);    }        function terminate():void    {        dispatchEvent(new Event(LoaderBlock.TRANSITION_DONE));      parent.removeChild(this);    }  }}